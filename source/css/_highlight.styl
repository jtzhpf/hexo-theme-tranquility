@import '_variables';

$code-line-number-bg = $white-blue;

/* highlight */
.highlight figcaption {
  display: flex;
  justify-content: space-between;
  background: $code-line-number-bg;
  padding: 0.1em 0.5em;
  font-size: $font-size-small;
}

.highlight td {
  padding: 0;
  border: 0;
}

code {
  border-radius: 3px;
  font-size: 14px;
  color: #901c1c
  padding: 2px 4px;
  word-break: break-all;
  overflow-wrap: break-word;
}

if (hexo-config('mermaid.enable')) {
  .mermaid {
    margin-bottom: 20px;
    text-align: center;
    background: white;
  }
}

.hljs {
  display: block;
}

h1 {
  display: block;
  margin-block-start: 1em;
  margin-block-end: 0.67em;
  margin-inline-start: 0px;
  margin-inline-end: 0px;
  font-weight: bold;
}

h2 {
  display: block;
  font-size: $font-size-larger;
  margin-block-start: 1em;
  margin-block-end: 0.2em;
  margin-inline-start: 0px;
  margin-inline-end: 0px;
  font-weight: bold;
}

h3 {
  display: block;
  font-size: $font-size-large;
  margin-block-start: 1.5em;
  margin-block-end: 0.2em;
  margin-inline-start: 0px;
  margin-inline-end: 0px;
  font-weight: bold;
}
pre, code {
  font-family: consolas, Menlo, monospace, 'PingFang SC', 'Microsoft YaHei';
}

figure.highlight {
  margin: 20px 0;
  overflow: auto;
  position: relative;
  padding-top: 30px;
  border-radius: 5px;
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.15);
  line-height: 1.5em;

  table {
    width: auto;
    border: 0;
    margin: 0;
  }
}

figure.highlight::before {
  background: #fc625d;
  box-shadow: 20px 0 #fdbc40, 40px 0 #35cd4b;
  left: 12px;
  margin-top: -20px;
  position: absolute;
  border-radius: 50%;
  content: ' ';
  height: 12px;
  width: 12px;
}

figure.highlight .code pre {
  padding-left: 10px;
  width: 100%;
}

figure.highlight pre {
  border: 0;
  margin: 0;
  padding: 10px 0;
}

code, pre, figure.highlight {
  background-color: #f5f5f5;
}

.gutter {
  padding: 0;
}

figure.highlight .gutter pre {
  text-align: right;
  margin: 0;
  padding: 10px;
  color: $grey;
  background-color: $code-line-number-bg;
}